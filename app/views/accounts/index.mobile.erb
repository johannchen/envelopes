<div data-role="header">
  <%= link_to 'Home', envelopes_path, "data-icon" => "home" %> 
  <h1>Accounts</h1>
  <%= link_to 'Add', new_account_path, "data-icon" => "plus" %> 
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @accounts.each do |account| %>
      <li>
        <%= link_to transactions_path(:account => account) do %>
          <%= account.name %>
          <span class="ui-li-aside">
            <%= number_to_currency(account.balance) %>
          </span>
        <% end %>
      </li>
    <% end %> 
  </ul>
</div>

<div data-role="footer" data-position="fixed">
  <div data-role="navbar">
    <ul>
      <li><%= link_to 'Envelopes', envelopes_path %></li>
      <li><%= link_to 'Transactions', transactions_path %></li>
      <li><a href="#" class="ui-btn-active">Accounts</a></li>
    </ul>
  </div>
</div>

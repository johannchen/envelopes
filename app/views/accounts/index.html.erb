<div class="page-header">
  <h1>Accounts</h1>
</div>

<div id="accounts">
  <ul class="tabs" data-tabs="tabs">
    <li class="active"><%= link_to 'Account Overview', accounts_path %></li>
    <li><%= link_to 'Add Account', new_account_path %></li>
  </ul>
  <div class="tab-content">
  <div class="active" id="overview">
    <table class="span6">
      <thead>
    <tr>
      <th>Name</th>
      <th class="money">Balance</th>
    </tr>
  </thead>
  <tbody>
  <% @accounts.each do |a| %>
    <tr>
      <td><%= link_to a.name, transactions_path(account: a.id) %></td>
      <td class="money"><%= number_to_currency(a.balance) %></td>
    </tr>
  <% end %>
  <tr>
    <td><strong>Total</strong></td>
    <td class="money"><%= number_to_currency(current_user.total_accounts_balance) %></td>
  </tr>
  </tbody>
  </table>
</div>

</div>

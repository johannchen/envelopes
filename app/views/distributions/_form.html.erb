<p>You currently have <%= number_to_currency(@unallocated_amount) %> in Unallocated Money.</p>

<% if @unallocated_amount <= 0 %>
  <p>Please <a href="/transactions#record_transaction">add income</a> and envelopes</p>
<% else %>
<%= form_for(@distribution) do |f| %>
<fieldset>
  <div class="clearfix">
    <%= f.label :date %>
    <div class="input">
      <%= f.text_field :date %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :amount %>
    <div class="input">
      <%= f.text_field :amount, :value => @total_refill_amount %>
    </div>
  </div>

  <%= fields_for :transactions do |t| %>
    <% @envelopes.each do |e| %>
    <div class="clearfix">
      <%= t.label e.name %>
      <div class="input">
        <%= t.text_field e.name, :value => e.refill_amount %>
        <span><%= number_to_currency(e.current_amount) %>/<%= number_to_currency(e.budget) %></span>
      </div>
    </div>
    <% end %>
  <% end %>

  <div class="actions"><%= f.submit "Save", class: "btn primary" %></div>
</fieldset>
<% end %>
<% end %>

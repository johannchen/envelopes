<%= form_for(@transaction) do |f| %>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :envelope %>
    <%= f.collection_select :envelope_id, Envelope.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>
  <% if params[:income] %>
  <div class="field">
    <%= f.hidden_field :income, :value => :true %>
  </div>
  <% end %>
  <div class="actions"><%= f.submit "Save" %></div>
<% end %>

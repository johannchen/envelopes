<h1>Budget Allocation</h1>
<div id="budget_allocation">
  <table>
    <tr>
      <th>Envelope</th>
      <th>Amount</th>
      <th>%</th>
    </tr>
  <% @envelopes.each do |e| %>
    <% e.monthly ? budget = e.budget : budget = e.budget/12 %>
    <tr>
      <td><%= e.name %></td>
      <td><%= number_to_currency(budget) %></td>
      <td><%= number_to_percentage(budget/@total * 100, :precision => 0) %></td>
    </tr>
  <% end %>
 </table>
 <p>Total: <%= number_to_currency(@total) %></p>
</div>

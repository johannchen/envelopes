<div id="recent_transactions">
<h3>Recent Transactions</h3>
<table>
<% @recent_transactions.each do |t| %>
  <tr>
    <td><%= t.date %></td>
    <td><%= t.envelope.name if t.envelope.present? %></td>
    <td><%= t.description %></td>
    <td class="money"><%= number_to_currency(t.amount) %></td>
  </tr>
<% end %>
</table>
</div>

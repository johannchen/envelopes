<%= form_tag :action => :create do %>
  <%= label_tag "Date" %>
  <%= text_field_tag "date" %>
  <%= label_tag "Description" %>
  <%= text_field_tag "description" %>
  <%= label_tag "Amount" %>
  <%= text_field_tag "amount" %>
  <%= label_tag "From" %>
  <%= select_tag "from", options_from_collection_for_select(Envelope.all, :id, :name) %>
  <%= label_tag "To" %>
  <%= select_tag "to", options_from_collection_for_select(Envelope.all, :id, :name) %>
  <%= submit_tag "Transfer" %>
<% end %>

<h3>Sign Up</h3>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<fieldset>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name, :required => "required" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email, :required => "required" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %> 
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password_confirmation %> 
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="actions"><%= f.submit "Sign Up", :class => "btn primary" %></div>
</fieldset>
<% end %>
